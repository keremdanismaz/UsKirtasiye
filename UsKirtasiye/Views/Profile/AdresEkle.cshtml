@{
    /**/

    ViewBag.Title = "AdresEkle";
}
<div class="single-product-area section-padding-100 ">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                @using (Html.BeginForm("AdresEkle", "Profile"))
                {
                    <br />
                    <div class="row">
                        <div class="col-12">
                            <div class="container">
                                <div class="card" style="background-image:url(https://png.pngtree.com/thumb_back/fh260/background/20190223/ourmid/pngtree-gold-gold-low-profile-background-material-low-profilebackground-materialconference-image_69763.jpg)">
                                    <p class="text-center" style="color:red;font-weight:bold">@TempData["AdresHata"]</p>
                                    <div class="row">
                                        <div class="col-2"></div>

                                        <div class="col-8 ">
                                            <h4 class="card-title mt-3 text-center"><b><span style="font-weight:bold" class="fa fa-plus"></span> Adres Ekle</b></h4>

                                            <div class="form-group input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text"> <span class="fa fa-address-book"></span> </span>
                                                </div>
                                                @Html.TextBox("Name", "", new { @class = "form-control", placeholder = "Adı", type = "text", required = "required" })
                                            </div> <!-- form-group// -->
                                            <div class="form-group input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text"> <span class="fa fa-location-arrow"></span> </span>
                                                </div>

                                                @Html.TextArea("AdresDescription", null, new { @class = "form-control", placeholder = "Adres Açıklaması", type = "text", required = "required" })
                                            </div>

                                            <div class="form-group">
                                                <button type="submit" class="btn btn-secondary btn-block"><span class="fa fa-plus"></span> Adres Ekle </button>
                                            </div> <!-- form-group// -->
                                        </div> <!-- card.// -->
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--container end.//-->
                }
            </div>
        </div>
        <br />
        <br />
    </div>
</div>