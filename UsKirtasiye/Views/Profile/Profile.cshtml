@model UsKirtasiye.DB.Members
@{

    ViewBag.Title = "Profile";
    var currentuser = (UsKirtasiye.DB.Members)Session["LogonUser"];
}
<div class="single-product-area section-padding-100 ">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                @using (Html.BeginForm("ProfileEdit", "Profile"))
                {

                    <div class="container">
                        <div class="card" style="background-image:url(https://png.pngtree.com/thumb_back/fh260/background/20190223/ourmid/pngtree-gold-gold-low-profile-background-material-low-profilebackground-materialconference-image_69763.jpg)">
                            <article class="card-body mx-auto" style="max-width: 400px;">
                                <h4 class="card-title mt-3 text-center"><b><span style="font-weight:bold" class="fa fa-user"></span> Profil Bilgilerim</b></h4>
                                <p class="text-center" style="color:red"><b>@TempData["YenilemeHatası"]</b></p>
                                <p class="text-center" style="color:green"><b>@TempData["Doğrulama"]</b></p>
                                <div class="form-group input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"> <i class="fa fa-user"></i> </span>
                                    </div>
                                    @Html.HiddenFor(model => model.Id, new { @class = "form-control" })
                                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control", type = "text", required = "required" })
                                </div> <!-- form-group// -->
                                <div class="form-group input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"> <i class="fa fa-user-circle"></i> </span>
                                    </div>
                                    @Html.TextBoxFor(model => model.Surname, new { @class = "form-control", type = "text", required = "required" })
                                </div>
                                <div class="form-group input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
                                    </div>
                                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control", type = "email", required = "required" })
                                </div> <!-- form-group// -->
                                <div class="form-group input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"> <i class="fa fa-phone"></i> </span>
                                    </div>
                                    <select style="max-width: 120px;" class="col-md-3">
                                        <option selected="">+90</option>
                                    </select>
                                    @Html.TextBoxFor(model => model.PhoneNumber, new { @class = "form-control", type = "number", required = "required" })
                                </div> <!-- form-group// -->
                                <div class="form-group input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                                    </div>
                                    @Html.TextBoxFor(model => model.Password, new { @class = "form-control", type = "password", required = "required" })
                                </div> <!-- form-group// -->
                                <div class="form-group">
                                    <button type="submit" class="btn btn-secondary btn-block"><span class="fa fa-repeat"></span> Güncelle </button>
                                </div> <!-- form-group// -->
                            </article>
                        </div> <!-- card.// -->
                    </div>
                    <!--container end.//-->
                }
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        box-shadow: 0 0 11px rgba(33,33,33,.2);
    }

        .card:hover {
            box-shadow: 0 0 21px rgba(33,33,33,.2);
        }
</style>