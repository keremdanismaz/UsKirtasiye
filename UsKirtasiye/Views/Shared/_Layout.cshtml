<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="description" content="">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- The above 4 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <!-- Title  -->
    <title>UsKırtasiye - @ViewBag.Title</title>

    <!-- Favicon  -->
    <link rel="icon" href="~/img/core-img/favicon.ico">

    <!-- Core Style CSS -->
    <link rel="stylesheet" href="~/css/core-style.css">
    <link rel="stylesheet" href="~/css/style.css">
</head>
<body>

    <!-- ##### Main Content Wrapper Start ##### -->
    <div class="main-content-wrapper d-flex clearfix">

        <!-- Mobile Nav (max width 767px)-->
        <div class="mobile-nav">
            <!-- Navbar Brand -->
            <div class="amado-navbar-brand">
                <a href="@Url.Action("Index","Index")"><img src="~/img/core-img/logo.png" alt="Ana Sayfa"></a>
            </div>
            <!-- Navbar Toggler -->
            <div class="amado-navbar-toggler">
                <span></span><span></span><span></span>
            </div>
        </div>

        <!-- Header Area Start -->
        <header class="header-area clearfix">
            <!-- Close Icon -->
            <div class="nav-close">
                <i class="fa fa-close" aria-hidden="true"></i>
            </div>
            <!-- Logo -->
            <div class="logo">
                <a href="@Url.Action("Index","Index")"><img src="~/img/core-img/logo.png" alt="Ana Sayfa"></a>
            </div>
            <!-- Amado Nav -->
            @{
                List<UsKirtasiye.Models.Product_Detail.ProductBasketModels>
                    basket = (List<UsKirtasiye.Models.Product_Detail.ProductBasketModels>)Session["Basket"];
                if (basket == null)
                {
                    basket = new List<UsKirtasiye.Models.Product_Detail.ProductBasketModels>();
                }
            }
            <nav class="amado-nav">
                <ul>
                    <li class="active">
                        <a href="@Url.Action("Index","Index")">
                            <span class="fa fa-home" style="color:#fbb710"></span>
                            Ana Sayfa
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Product","Product", new {id = 24})">
                            <span class="fa fa-product-hunt" style="color:#fbb710"></span> Ürünlerimiz
                        </a>
                    </li>
                    @if (Session["Basket"] != null)
                    {
                        <li>
                            <a href="~/Product_Detail/Basket">
                                <span class="fa fa-cart-plus" style="color:#fbb710"></span> Sepetim
                                <span><span>(@basket.Count)</span> </span>
                            </a>
                        </li>
                    }
                    @if (Session["LogonUser"] != null)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Sparişlerim","Buy")">
                                <span style="color:#fbb710" class="fa fa-first-order"></span> Sparişlerim
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Profile","Profile")">
                                <span style="color:#fbb710" class="fa fa-user"></span> Profil - @(((UsKirtasiye.DB.Members)Session["LogonUser"]).Name)
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Adresler","Profile")">
                                <span style="color:#fbb710" class="fa fa-address-card"></span> Adreslerim
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Logout","Login")">
                                <span style="color:#fbb710" class="fa fa-sign-out"></span> Çıkış
                            </a>
                        </li>

                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Login","Login")">
                                <span style="color:#fbb710" class="fa fa-user"></span> Giriş Yap
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Register","Register")">
                                <span style="color:#fbb710;font-weight:bold" class="fa fa-registered"></span> Kayıt Ol
                            </a>
                        </li>
                    }
                </ul>
            </nav>
            <!-- Button Group -->
            <div class="amado-btn-group mt-30 mb-100">
                <a href="@Url.Action("Hakkımızda","AboutMe")" class="btn amado-btn mb-15">Hakkımızda</a> @*Hakkımızda url ve sayfası gelecek*@
            </div>
            <!-- Social Button -->
            <div class="social-info d-flex justify-content-between">
                <a href="#"><i class="fa fa-pinterest" aria-hidden="true"></i></a>
                <a href="#"><i class="fa fa-instagram" aria-hidden="true"></i></a>
                <a href="#"><i class="fa fa-facebook" aria-hidden="true"></i></a>
                <a href="#"><i class="fa fa-twitter" aria-hidden="true"></i></a>
            </div>
        </header>
        <!-- Header Area End -->
        @RenderBody()
    </div>
    <!-- ##### Main Content Wrapper End ##### -->
    <!-- ##### Newsletter Area Start ##### -->

    <section class="newsletter-area section-padding-100-0">
        <div class="container">

            <div class="row align-items-center">
                <!-- Newsletter Text -->
                <div class="col-md-3">
                    <div class="newsletter-text mb-100">
                        <img class="rounded mx-auto d-block" src="~/img/core-img/home-footer-icon-2.png" />
                        <h4 style="color:#fff" class="text-center"> Ürünlerini Sepete At</h4>
                        <p class="text-center">Beğendiğin ürünleri sepetine at orda seni beklesinler.</p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="newsletter-text mb-100">
                        <img class="rounded mx-auto d-block" src="~/img/core-img/home-footer-icon-3.png" />
                        <h4 class="text-center" style="color:#fff">Bilgilerini Gir </h4>
                        <p class="text-center">Sepetine giderek bilgilerini gir ve telefonumuzu bekle.</p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="newsletter-text mb-100">
                        <img class="rounded mx-auto d-block" src="~/img/core-img/home-footer-icon-1.png" />
                        <h4 class="text-center" style="color:#fff">Satici İle Görüş </h4>
                        <p class="text-center">Satiş temsilcimiz ile iletişime geç ürünler kapına kadar gelsin</p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="newsletter-text mb-100">
                        <img class="rounded mx-auto d-block" src="~/img/core-img/home-footer-icon-4.png" />
                        <h4 class="text-center" style="color:#fff"> Müsteri Memnuniyeti</h4>
                        <p class="text-center">Ürünler fatura ile kapına kadar gelsin ve ödemeni güvenli yap.</p>
                    </div>
                </div>
                <!-- Newsletter Form -->
            </div>
        </div>
    </section>
    <!-- ##### Newsletter Area End ##### -->
    <!-- ##### Footer Area Start ##### -->
    <footer class="footer_area clearfix">
        <div class="container">
            <div class="row align-items-center">
                <!-- Single Widget Area -->
                <div class="col-12 col-lg-4">
                    <div class="single_widget_area">
                        <!-- Logo -->
                        <div class="footer-logo mr-50">
                            <a href="@Url.Action("Index","Index")"><img src="~/img/core-img/unnamed.jpg" style="width:600px; height:80px; border-radius:10px" alt="Ana Sayfa"></a>
                        </div>
                        <!-- Copywrite Text -->
                        <p class="copywrite">
                            <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                            Copyright &copy;
                            <script>document.write(new Date().getFullYear());</script> All rights reserved with <i class="fa fa-heart-o" aria-hidden="true"></i> by <a href="http://keydi.herokuapp.com/" target="_blank">Keydi</a>
                            <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                        </p>
                    </div>
                </div>
                <!-- Single Widget Area -->
                <div class="col-12 col-lg-8">
                    <div class="single_widget_area">
                        <!-- Footer Menu -->
                        <div class="footer_menu">
                            <nav class="navbar navbar-expand-lg justify-content-end">
                                <button class="navbar-toggler  " type="button" data-toggle="collapse" data-target="#footerNavContent" aria-controls="footerNavContent" aria-expanded="false" aria-label="Toggle navigation"><i class="fa fa-bars"></i></button>

                                <div class="collapse navbar-collapse" id="footerNavContent">
                                    <ul class="navbar-nav ml-auto">
                                        <li class="nav-item active">
                                            <a class="nav-link" href="@Url.Action("Index","Index")">Ana Sayfa</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="@Url.Action("Product","Product")">Ürünlerimiz</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="~/Product_Detail/Basket">Sepetim</a>
                                        </li>
                                    </ul>
                                </div>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <!-- ##### Footer Area End ##### -->
    <!-- ##### jQuery (Necessary for All JavaScript Plugins) ##### -->
    <script src="~/js/jquery/jquery-2.2.4.min.js"></script>
    <!-- Popper js -->
    <script src="~/js/popper.min.js"></script>
    <!-- Bootstrap js -->
    <script src="~/js/bootstrap.min.js"></script>
    <!-- Plugins js -->
    <script src="~/js/plugins.js"></script>
    <!-- Active js -->
    <script src="~/js/active.js"></script>
</body>
</html>